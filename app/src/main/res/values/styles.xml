<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="headerOne">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text2</item>
        <item name="android:textSize">@dimen/header_1</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/line</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>


    </style>

    <style name="cadru">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:background">@color/background_2</item>
        <item name="android:textColor">@color/text</item>
    </style>

</resources>
